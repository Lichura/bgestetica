          <% if current_user.profile_id == 1 || current_user.profile_id == 2 %>
            <li><a href="/home/schedule">Turnos</a></li>
          <% else %>
            <li><a href="/menu/buscar_turnos">Turnos</a></li>
          <% end %>
        <% end %> -->



<div id="content"><%= content_for?(:content) ? yield(:content) : yield %></div>
</body>
</html>
