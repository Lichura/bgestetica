<p id="notice"><%= notice %></p>

<h1>Listing Equipos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Color</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipos.each do |equipo| %>
      <tr>
        <td><%= equipo.nombre %></td>
        <td><%= equipo.descripcion %></td>
        <td><div class="equipo_color" style="width: 20px; height:20px;background-color:<%= equipo.color %>;"></div></td>
        <td><%= equipo.activo %></td>
        <td><%= link_to 'Show', equipo %></td>
        <td><%= link_to 'Edit', edit_equipo_path(equipo) %></td>
        <td><%= link_to 'Destroy', equipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

