<p id="notice"><%= notice %></p>

<h1>Ussuarios</h1>
<%= form_tag edit_multiple_users_path, method: :get do %>
<table>
  <thead>
    <tr>
      <th>Check</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= check_box_tag "users_ids[]", user.id %></td>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.profile %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Esta seguro que desea eliminar al usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "Editar check" %>
<% end %>
<br>

<%= link_to 'Nuevo usuario', new_user_path %>