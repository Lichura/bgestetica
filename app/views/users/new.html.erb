<h1>Sign Up</h1>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2> Form ins invalid</h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :lastname %><br />
		<%= f.text_field :lastname %>
	</p>
	<p>
		<%= f.label :age %><br />
		<%= f.date_field :age %>
	</p>
	<p>
		<%= f.label :email %><br />
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</p>	
	<p class="button"><%= f.submit %></p>
<% end %>