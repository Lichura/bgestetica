<html>
<body>


<div class="container">
	<div class="row">
<%= form_tag(menu_nuevo_turno_path, :method => "get", id: "search-form", :class => 'search_input') do %>
	<%= text_field_tag :medico,  params[:medico], placeholder: "medico" %>
	<%= text_field_tag :equipo,  params[:equipo], placeholder: "equipo" %>
	<%= text_field_tag :start_date,  params[:start_date], :class => "datepicker" %>
	<%= submit_tag "Buscar", :class => 'search_input_button' %>
<% end %>
	</div>
    <div class="row">
        <div class='col-sm-6'>
				    <input id="txtDate" type="text" />
        </div>

    </div>
    <div class="row">
		<%= button_to 'generar turnos', menu_generar_turnos_path, method: :post %>
	</div>
	<div class="row">
	<table>
		<thead>
			<tr>
				<th>id</th>	
				<th>inicio</th>
				<th>Fin</th>
				<th>Equipo</th>	
				<th>Medico</th>			
			</tr>
		</thead>
		<tbody>


			<% if @turnos.present? %>
				<% @turnos.each do |turno| %>
					<tr class="<%= cycle('even', 'odd') -%>">
						<td><%= turno.id %></td>		
						<td><%= turno.start_date %></td>
						<td><%= turno.end_date %></td>
						<td><%= turno.equipo %></td>
						<td><%= turno.medico %></td>			
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>
</div>
</body>
</html>