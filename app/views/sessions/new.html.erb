<%= stylesheet_link_tag    'signup' %>
<%= stylesheet_link_tag    'sessions' %>
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">
                <div class="card border-none">
                    <div class="card-block">
                        <div class="mt-2 text-center">
                            <h2>Login</h2>
                        </div>
                        <p class="mt-4 text-white lead text-center">
                            Ingrese sus credenciales
                        </p>
                        <div class="mt-4">

                            <%= form_tag sessions_path do %>
                            <div class="form-group">
                                <%= email_field_tag :email, "", autofocus: true, class: "form-control", :placeholder => "nombre@email.com" %>
                            </div>
                            <div class="form-group">
                                <%= password_field_tag :password, "",autocomplete: "off", class: "form-control", :placeholder => "contraseña" %>
                            </div>
                            <div class="form-group">
                               <div class="field">
                                <%= check_box_tag :remember_me, 1 %>
                                <%= label_tag :remember_me, "Recordarme" %>
                            </div>
                            <%= submit_tag "Ingresar", class: "btn btn-primary btn-block" %>
                            <% end %>
                        </div>

                        <div class="clearfix"></div>
                        <p class="content-divider center mt-4"><span>o</span></p>
                        <%= link_to "recuperar contraseña", new_password_reset_path, class: "btn btn-secondary btn-block" %>
                    </div>
               </div>
           </div>
       </div>
   </div>
</section>
