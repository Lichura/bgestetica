    </div>
  </div>
    <div class="form-group">
    <%= f.label :medico, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :medico, data: { autocomplete_source: medicos_path }, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :equipo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :equipo, :class => "form-control", data: {autocomplete_source: Equipo.where(activo: true).order(:name).map { |t| { :label => t.nombre, :value => t.id } } %>

